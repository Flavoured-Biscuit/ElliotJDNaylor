@model ElliotJDNaylor.ViewModels.ContactViewModel

@{
    ViewBag.Title = "Contact";
}

@using (Html.BeginForm("Index", "Contact", FormMethod.Post, new { id = "contact-form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.RecapthaSiteKey)

    <div class="form-field">
        @Html.LabelFor(m => m.FirstName, new { @class = "req" })
        <div class="form-field-group">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "sm-field" })
            @Html.ValidationMessageFor(m => m.FirstName)
        </div>
    </div>

    <div class="form-field">
        @Html.LabelFor(m => m.LastName, new { @class = "req" })
        <div class="form-field-group">
            @Html.TextBoxFor(m => m.LastName, new { @class = "sm-field" })
            @Html.ValidationMessageFor(m => m.LastName)
        </div>
    </div>

    <div class="form-field">
        @Html.LabelFor(m => m.Email, new { @class = "req" })
        <div class="form-field-group">
            @Html.TextBoxFor(m => m.Email, new { @class = "sm-field" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
    </div>

    <div class="form-field">
        @Html.LabelFor(m => m.ContactNumber)
        <div class="form-field-group">
            @Html.TextBoxFor(m => m.ContactNumber, new { @class = "sm-field" })
            @Html.ValidationMessageFor(m => m.ContactNumber)
        </div>
    </div>

    <div class="form-field">
        @Html.LabelFor(m => m.MessageContent, new { @class = "req" })
        <div class="form-field-group">
            @Html.TextAreaFor(m => m.MessageContent, new { rows = "10" })
            @Html.ValidationMessageFor(m => m.MessageContent)
        </div>
    </div>

    <div class="form-field-btngroup">
        <button class="g-recaptcha"
                data-sitekey="@Model.RecapthaSiteKey"
                data-callback='onSubmit'
                data-action='submit'>
            Send
        </button>
    </div>

}

@section scripts {
    <script src="https://www.google.com/recaptcha/api.js"></script>
    <script>
        function onSubmit(token) {
            document.getElementById("contact-form").submit();
        }
    </script>

}
